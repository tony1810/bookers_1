<div class="edit">
  <h1>Editing Book</h1>

  <%= form_with model: @book , url: book_path(@book) , method: :patch do |f|  %>

    <div class="form-edit">
      <div class="error">
            <% if @book.errors.any?  %>
                <%= @book.errors.count %>errors prohibited this book from being saved:
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        <div class="area">
          <label for="book-title">
            Title
          </label>
            <%=f.text_field :title %>
        </div>
    <div class="area">
      <label for="book-title">
        Body
      </label>
        <%=f.text_area :body %>
    </div>
    <div class="area">
      <%= f.submit 'Update Book'%>
    </div>
  </div>

  <% end  %>

  <%= link_to 'Show', book_path(@book) ,class: "link-book" %>
  |
  <%= link_to 'Back', books_path , class: "link-book" %>

</div>